{
  "compilerOptions": {
    "target": "es6",                          
    "module": "es6",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "dist",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node", 
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "jest.config.js",
    "coverage/"
  ]
}